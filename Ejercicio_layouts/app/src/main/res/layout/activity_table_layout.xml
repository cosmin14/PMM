<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/colorFondo"
    tools:context="com.example.jorgi.ejercicio_layouts.tableLayout_activity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/colorRed"
        android:text="Red"
        android:id="@+id/btnRed"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="80dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/colorYellow"
        android:text="Yellow"
        android:id="@+id/btnYellow"
        android:layout_alignTop="@+id/btnRed"
        android:layout_toRightOf="@+id/btnRed"
        android:layout_toEndOf="@+id/btnRed"
        android:width="80dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/colorBlue"
        android:text="Blue"
        android:id="@+id/btnBlue"
        android:layout_alignTop="@+id/btnYellow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="180dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewColor"
        android:layout_below="@+id/btnRed"
        android:layout_centerHorizontal="true"
        android:height="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_below="@+id/textViewColor"
        android:layout_alignRight="@+id/textViewColor"
        android:layout_alignEnd="@+id/textViewColor"
        android:width="180dp" />
</RelativeLayout>
