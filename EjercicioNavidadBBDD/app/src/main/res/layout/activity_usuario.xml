<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".usuarioActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nuevo Registro"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/TILnombre">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/editTextNombre"
                android:hint="Nombre"
                android:ellipsize="start"
                android:gravity="center"
                android:drawableRight="@drawable/ic_person_black_24dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/TILapellido1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextApellido1"
                android:hint="1r Apellido"
                android:ellipsize="start"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_person_black_24dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/TILapellido2">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextApellido2"
                android:hint="2o Apellido"
                android:ellipsize="start"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_person_black_24dp"/>
        </android.support.design.widget.TextInputLayout>


        <!--<android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/TILspinnerComAut">-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".28"
                android:orientation="horizontal"
                android:background="@drawable/bordercolorspinner"
                android:layout_marginTop="10dp"
                android:id="@+id/relSpinnerComAut">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/spinnerComAut"
                        android:entries="@array/arrayComAut"
                        android:spinnerMode="dialog"
                        android:ellipsize="start"
                        android:gravity="center"
                        android:background="@android:color/transparent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
        <!--</android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/TILspinnerProvincia">-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".28"
                android:background="@drawable/bordercolorspinner"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/relSpinnerProv">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:entries="@array/arrayDefecto"
                    android:id="@+id/spinnerProvincia"
                    android:spinnerMode="dropdown"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp" />

            </RelativeLayout>
        <!--</android.support.design.widget.TextInputLayout>-->


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/TILlocalidad">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextLocalidad"
                android:inputType="text"
                android:hint="Localidad"
                android:ellipsize="start"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_location_on_black_24dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/TILdireccion">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/editTextDireccion"
                android:hint="Direccion"
                android:ellipsize="start"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_location_on_black_24dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/TILemail">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:id="@+id/editTextEmail"
                android:hint="email"
                android:ellipsize="start"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_email_black_24dp"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/TILdni">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextDNI"
                android:inputType="text"
                android:hint="DNI"
                android:ellipsize="start"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_event_note_black_24dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/TILpass1">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextPass"
                android:inputType="textPassword"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:hint="Contraseña"
                android:ellipsize="start"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/TILpass2">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextPass2"
                android:inputType="textPassword"
                android:layout_below="@+id/editTextPass"
                android:layout_centerHorizontal="true"
                android:hint="Reptir contraseña"
                android:ellipsize="start"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear usuario"
        android:id="@+id/buttonEnviarDatos"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#0004FF"
        android:textColor="#FFF"
        android:textSize="20dp" />



</RelativeLayout></ScrollView>
